<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="styletext">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="textdetail">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="text_recycle_item">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="fontFamily">@font/sfcartoonisthand</item>
    </style>
    <style name="detail_recycle_item">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    <style name="detail_recycle_item_time">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="fontFamily">@font/sfcartoonisthand</item>
    </style>


</resources>